<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_red_dark"
    tools:context="com.example.imooc_business.view.login.LoginActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="260dp">
        <com.example.lib_common_ui.SpreadView
            app:spread_delay_milliseconds="150"
            app:spread_distance="10"
            app:spread_max_radius="120"
            app:spread_radius="110"
            android:id="@+id/spreadView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <com.example.lib_common_ui.CircleImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher"/>

    </RelativeLayout>

    <TextView
        android:text="手机号登录"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_mobile_loggin"
        android:layout_marginBottom="110dp"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:id="@+id/login_view"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="已同意《用户协议》和《隐私政策》"
        android:textColor="@android:color/white"
        android:textSize="10sp" />

</RelativeLayout>