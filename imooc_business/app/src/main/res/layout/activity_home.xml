<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:id="@+id/drawer_layout"
    tools:context="com.example.imooc_business.view.home.HomeActivity">

    <!--    存放内容区-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:id="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/category"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/toggle_view"/>

            <TextView
                android:background="@mipmap/b_p"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/search_view"
                android:layout_width="20dp"
                android:layout_height="20dp"/>

            <net.lucode.hackware.magicindicator.MagicIndicator
                android:layout_toEndOf="@id/toggle_view"
                android:layout_toStartOf="@id/search_view"
                android:layout_marginEnd="42dp"
                android:layout_marginStart="42dp"
                android:layout_centerInParent="true"
                android:id="@+id/magic_indicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <androidx.viewpager.widget.ViewPager
            android:layout_below="@id/title_layout"
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </RelativeLayout>

    <!--    存放侧滑菜单-->
    <RelativeLayout
        android:layout_gravity="start"
        android:background="@android:color/white"
        android:layout_marginEnd="25dp"
        android:id="@+id/left_drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:scrollbars="none"
            android:layout_above="@id/divider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginTop="25dp"
                        android:visibility="gone"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/avatar_view"
                        android:layout_width="150dp"
                        android:layout_height="150dp"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/unlogin_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="13sp"
                            android:textColor="@color/color_333333"
                            android:layout_marginTop="20dp"
                            android:text="@string/login_net_music_hint"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:textSize="13sp"
                            android:textColor="@color/color_333333"
                            android:text="@string/login_net_music_sync_hint"
                            android:gravity="center"
                            android:layout_marginTop="2dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/login_time_now_drawer"
                            android:paddingStart="40dp"
                            android:paddingTop="5dp"
                            android:paddingEnd="40dp"
                            android:paddingBottom="5dp"
                            android:text="@string/login_time_now"
                            android:textColor="@color/color_white"
                            android:textSize="15sp"/>
                    </LinearLayout>

                </RelativeLayout>
                <LinearLayout
                    android:paddingEnd="15dp"
                    android:paddingStart="15dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.example.lib_common_ui.VerticalItemView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:icon="@mipmap/abi"
                        app:iconHeight="40dp"
                        app:iconWidth="40dp"
                        app:infoText="我的消息"
                        app:infoTextColor="@color/color_333333"
                        app:infoTextMarginTop="5dp"
                        app:infoTextSize="12sp"
                        app:tipBg="@drawable/bg_home_tip"
                        app:tipPaddingRight="5dp"
                        app:tipPaddingTop="5dp"
                        app:tipText="1"
                        app:tipTextColor="@color/color_white"
                        app:tipTextSize="12sp" />

                    <com.example.lib_common_ui.VerticalItemView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:icon="@mipmap/abj"
                        app:iconHeight="40dp"
                        app:iconWidth="40dp"
                        app:infoText="我的好友"
                        app:infoTextColor="@color/color_333333"
                        app:infoTextMarginTop="5dp"
                        app:infoTextSize="12sp"
                        app:tipBg="@drawable/bg_home_tip"
                        app:tipPaddingRight="5dp"
                        app:tipPaddingTop="5dp"
                        app:tipText="1"
                        app:tipTextColor="@color/color_white"
                        app:tipTextSize="12sp" />

                    <com.example.lib_common_ui.VerticalItemView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:icon="@mipmap/abk"
                        app:iconHeight="40dp"
                        app:iconWidth="40dp"
                        app:infoText="个性换肤"
                        app:infoTextColor="@color/color_333333"
                        app:infoTextMarginTop="5dp"
                        app:infoTextSize="12sp"
                        app:tipBg="@drawable/bg_home_tip"
                        app:tipPaddingRight="5dp"
                        app:tipPaddingTop="5dp"
                        app:tipText="1"
                        app:tipTextColor="@color/color_white"
                        app:tipTextSize="12sp" />

                    <com.example.lib_common_ui.VerticalItemView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:icon="@mipmap/abi"
                        app:iconHeight="40dp"
                        app:iconWidth="40dp"
                        app:infoText="听歌识曲"
                        app:infoTextColor="@color/color_333333"
                        app:infoTextMarginTop="5dp"
                        app:infoTextSize="12sp"
                        app:tipBg="@drawable/bg_home_tip"
                        app:tipPaddingRight="5dp"
                        app:tipPaddingTop="5dp"
                        app:tipText="1"
                        app:tipTextColor="@color/color_white"
                        app:tipTextSize="12sp" />

                </LinearLayout>

                <!--分割线-->
                <View
                    android:background="#dddddd"
                    android:layout_marginTop="25dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"/>

                <com.example.lib_common_ui.HorizontalItemView
                    app:hIcon="@mipmap/anc"
                    app:hIconWidth="30dp"
                    app:hIconHeight="30dp"
                    app:hTipVisiblity="false"
                    app:paddingLeft="15dp"
                    app:paddingRight="20dp"
                    app:rightText="可识别其他app歌曲"
                    app:tileText="听歌识曲"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <com.example.lib_common_ui.HorizontalItemView
                    app:hIcon="@mipmap/anc"
                    app:hIconWidth="30dp"
                    app:hIconHeight="30dp"
                    app:hTipVisiblity="false"
                    app:paddingLeft="15dp"
                    app:paddingRight="20dp"
                    app:rightText="陈百祥北京"
                    app:tileText="演出"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <com.example.lib_common_ui.HorizontalItemView
                    app:hIcon="@mipmap/ann"
                    app:hIconWidth="30dp"
                    app:hIconHeight="30dp"
                    app:hTipVisiblity="false"
                    app:paddingLeft="15dp"
                    app:paddingRight="20dp"
                    app:rightText="数显tws89元抢"
                    app:tileText="商城"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <com.example.lib_common_ui.HorizontalItemView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hIcon="@mipmap/ank"
                    app:hTipVisiblity="false"
                    app:hIconWidth="30dp"
                    app:hIconHeight="30dp"
                    app:paddingLeft="15dp"
                    app:paddingRight="20dp"
                    app:tileText="游戏推荐"/>

                <com.example.lib_common_ui.HorizontalItemView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hIcon="@mipmap/ang"
                    app:hTipVisiblity="false"
                    app:hIconWidth="30dp"
                    app:hIconHeight="30dp"
                    app:paddingLeft="15dp"
                    app:paddingRight="20dp"
                    app:tileText="附近的人"/>

                <com.example.lib_common_ui.HorizontalItemView
                    app:hIcon="@mipmap/anc"
                    app:hIconWidth="30dp"
                    app:hIconHeight="30dp"
                    app:hTipVisiblity="false"
                    app:paddingLeft="15dp"
                    app:paddingRight="20dp"
                    app:rightText="超中毒抖音神曲"
                    app:tileText="口袋彩铃"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <!--分割线-->
                <View
                    android:background="#dddddd"
                    android:layout_marginTop="25dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"/>


                <com.example.lib_common_ui.HorizontalItemView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hIcon="@mipmap/ani"
                    app:hTipVisiblity="false"
                    app:hIconWidth="30dp"
                    app:hIconHeight="30dp"
                    app:paddingLeft="15dp"
                    app:paddingRight="20dp"
                    app:tileText="我的订单"/>

                <com.example.lib_common_ui.HorizontalItemView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hIcon="@mipmap/anm"
                    app:hTipVisiblity="false"
                    app:hIconWidth="30dp"
                    app:hIconHeight="30dp"
                    app:paddingLeft="15dp"
                    app:paddingRight="20dp"
                    app:tileText="定时停止播放"/>

                <com.example.lib_common_ui.HorizontalItemView
                    android:id="@+id/home_qrcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hIcon="@mipmap/anh"
                    app:hTipVisiblity="false"
                    app:paddingLeft="15dp"
                    app:paddingRight="20dp"
                    app:hIconWidth="30dp"
                    app:hIconHeight="30dp"
                    app:tileText="扫一扫"/>

                <com.example.lib_common_ui.HorizontalItemView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hIcon="@mipmap/ano"
                    android:id="@+id/home_music"
                    app:hTipVisiblity="false"
                    app:hIconWidth="30dp"
                    app:hIconHeight="30dp"
                    app:paddingLeft="15dp"
                    app:paddingRight="20dp"
                    app:tileText="音乐闹钟"/>

                <com.example.lib_common_ui.HorizontalItemView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/online_music_view"
                    app:hIcon="@mipmap/anq"
                    app:hTipVisiblity="false"
                    app:hIconWidth="30dp"
                    app:hIconHeight="30dp"
                    app:paddingLeft="15dp"
                    app:paddingRight="20dp"
                    app:tileText="在线听歌免流量"/>

                <com.example.lib_common_ui.HorizontalItemView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hIcon="@mipmap/ang"
                    app:hTipVisiblity="false"
                    app:hIconWidth="30dp"
                    app:hIconHeight="30dp"
                    app:paddingLeft="15dp"
                    app:paddingRight="20dp"
                    app:tileText="优惠券"/>

                <com.example.lib_common_ui.HorizontalItemView
                    android:id="@+id/check_update_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hIcon="@mipmap/ank"
                    app:hTipVisiblity="false"
                    app:hIconWidth="30dp"
                    app:hIconHeight="30dp"
                    app:paddingLeft="15dp"
                    app:paddingRight="20dp"
                    app:tileText="检查更新"/>

                <com.example.lib_common_ui.HorizontalItemView
                    app:hIcon="@mipmap/anc"
                    app:hIconWidth="30dp"
                    app:hIconHeight="30dp"
                    app:hTipVisiblity="false"
                    app:paddingLeft="15dp"
                    app:paddingRight="20dp"
                    app:rightText="青少年模式"
                    app:tileText="未开启"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </ScrollView>

        <!--分割线-->
        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_alignTop="@id/operator_view"
            android:background="#dddddd" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:id="@+id/operator_view"
            android:layout_width="match_parent"
            android:layout_height="52dp">
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@mipmap/baz"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
                <View
                    android:layout_width="6dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/color_333333"
                    android:text="夜间模式"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@mipmap/bb1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
                <View
                    android:layout_width="6dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/color_333333"
                    android:text="设置"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@mipmap/baq"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
                <View
                    android:layout_width="6dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/exit_layout"
                    android:textSize="16sp"
                    android:textColor="@color/color_333333"
                    android:text="退出"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>


</androidx.drawerlayout.widget.DrawerLayout>